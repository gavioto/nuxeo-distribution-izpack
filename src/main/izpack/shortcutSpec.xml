<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<shortcuts>
  <!-- <skipIfNotSupported /> -->
  <defaultCurrentUser />
  <programGroup defaultName="@PRODUCT_NAME@ @PRODUCT_VERSION@"
    location="applications" />
  <shortcut applications="yes" commandLine="gui" description="Nuxeo Control Panel"
    desktop="yes" iconFile="$INSTALL_PATH/images/icon-controlpanel.ico"
    iconIndex="0" initialState="normal" name="Nuxeo Control Panel" programGroup="yes"
    startMenu="yes" startup="no" target="$INSTALL_PATH/bin/nuxeoctl.bat"
    workingDirectory="$INSTALL_PATH">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut applications="yes" commandLine="gui start" description="Start Nuxeo"
    desktop="yes" iconFile="$INSTALL_PATH/images/icon-start.ico" iconIndex="0"
    initialState="noShow" name="Start Nuxeo" programGroup="yes" startMenu="no"
    startup="no" target="$INSTALL_PATH/bin/nuxeoctl.bat" workingDirectory="$INSTALL_PATH">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut applications="yes" commandLine="nogui stop" description="Stop Nuxeo"
    desktop="yes" iconFile="$INSTALL_PATH/images/icon-stop.ico" iconIndex="0"
    initialState="noShow" name="Stop Nuxeo" programGroup="yes" startMenu="no"
    startup="no" target="$INSTALL_PATH/bin/nuxeoctl.bat" workingDirectory="$INSTALL_PATH">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut name="Nuxeo Documentation" programGroup="yes" desktop="yes"
    applications="yes" startMenu="yes" startup="no" target="" workingDirectory=""
    commandLine="" initialState="noShow" iconFile="help" iconIndex="0"
    url="http://doc.nuxeo.com" type="Link" encoding="UTF-8" description="Nuxeo documentation site">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut name="Uninstall @PRODUCT_NAME@ @PRODUCT_VERSION@" target="java"
    commandLine="-jar '${INSTALL_PATH}/bin/uninstaller.jar'" workingDirectory="$INSTALL_PATH"
    description="Uninstall @PRODUCT_NAME@ @PRODUCT_VERSION@" initialState="normal"
    programGroup="yes" desktop="no" applications="yes" startMenu="no" startup="no">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
</shortcuts>

