<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<shortcuts>
  <skipIfNotSupported />
  <defaultCurrentUser />
  <programGroup defaultName="@PRODUCT_NAME@ @PRODUCT_VERSION@"
    location="applications" />
  <shortcut applications="no" commandLine="gui" description="Nuxeo Control Panel"
    desktop="yes" iconFile="$INSTALL_PATH/images/icon-controlpanel.png"
    iconIndex="0" initialState="normal" name="Nuxeo Control Panel" programGroup="yes"
    startMenu="no" startup="no" target="$INSTALL_PATH/bin/nuxeoctl" type="Application"
    workingDirectory="$INSTALL_PATH" encoding="UTF-8" createForAll="true"
    Categories="Application;Office">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut applications="no" commandLine="gui start" description="Start Nuxeo"
    desktop="yes" encoding="UTF-8" iconFile="$INSTALL_PATH/images/icon-start.png"
    iconIndex="0" initialState="normal" name="Start Nuxeo" programGroup="yes"
    startMenu="no" startup="no" target="$INSTALL_PATH/bin/nuxeoctl" type="Application"
    workingDirectory="$INSTALL_PATH" createForAll="true" Categories="Application;Office">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut applications="no" commandLine="nogui stop" description="Stop Nuxeo"
    desktop="yes" encoding="UTF-8" iconFile="$INSTALL_PATH/images/icon-stop.png"
    iconIndex="0" initialState="normal" name="Stop Nuxeo" programGroup="yes"
    startMenu="no" startup="no" target="$INSTALL_PATH/bin/nuxeoctl" type="Application"
    workingDirectory="$INSTALL_PATH" createForAll="true" Categories="Application;Office">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
  <shortcut name="Uninstall" target="${INSTALL_PATH}/bin/uninstaller.jar"
    encoding="UTF-8" commandLine="" workingDirectory="$INSTALL_PATH"
    description="Uninstall Nuxeo" initialState="normal" programGroup="yes"
    desktop="no" applications="no" type="Application" startMenu="no" startup="no"
    createForAll="true" Categories="Application;Office">
    <createForPack name="@PRODUCT_NAME@" />
  </shortcut>
</shortcuts>
